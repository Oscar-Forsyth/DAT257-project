<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav_graph"
    app:startDestination="@id/mainMenu">


    <activity
        android:id="@+id/availableSportsActivity"
        android:name="com.example.application.AvailableSportsActivity"
        android:label="activity_available_sports"
        tools:layout="@layout/activity_available_sports" />
    <activity
        android:id="@+id/mainMenu"
        android:name="com.example.application.MainMenu"
        android:label="activity_main_menu"
        tools:layout="@layout/activity_main_menu">
        <action
            android:id="@+id/action_mainMenu_to_availableSportsActivity"
            app:destination="@id/availableSportsActivity"
            app:enterAnim="@anim/fragment_fast_out_extra_slow_in" />
        <action
            android:id="@+id/action_mainMenu_to_quizRecommended"
            app:destination="@id/quizRecommended" />
        <action
            android:id="@+id/action_mainMenu_to_testActivity"
            app:destination="@id/testActivity" />
    </activity>
    <fragment
        android:id="@+id/quizRecommended"
        android:name="com.example.application.QuizRecommended"
        android:label="fragment_quiz_recommended"
        tools:layout="@layout/fragment_quiz_recommended">
        <action
            android:id="@+id/action_quizRecommended_to_mainMenu"
            app:destination="@id/mainMenu" />
    </fragment>
    <fragment
        android:id="@+id/FirstFragment"
        android:name="com.example.application.FirstFragment"
        android:label="@string/first_fragment_label"
        tools:layout="@layout/fragment_first">

        <action
            android:id="@+id/action_FirstFragment_to_SecondFragment"
            app:destination="@id/SecondFragment" />
    </fragment>
    <fragment
        android:id="@+id/SecondFragment"
        android:name="com.example.application.SecondFragment"
        android:label="@string/second_fragment_label"
        tools:layout="@layout/fragment_second">

        <action
            android:id="@+id/action_SecondFragment_to_FirstFragment"
            app:destination="@id/FirstFragment" />
    </fragment>
    <activity
        android:id="@+id/testActivity"
        android:name="com.example.application.testActivity"
        android:label="activity_test"
        tools:layout="@layout/activity_test" />
</navigation>